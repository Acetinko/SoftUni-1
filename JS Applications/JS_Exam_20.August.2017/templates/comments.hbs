<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{url}}">
                <img src="{{imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{url}}">
                    {{title}}
                </a>
            </div>
            <div class="details">
                {{#if description}}
                    <p>{{description}}</p>
                {{else}}
                    <p>No description.</p>
                {{/if}}
                <div class="info">
                    submitted {{daysAgo}} ago by {{author}}
                </div>
                <div class="controls">
                    <ul>
                        {{#if isAuth}}
                            <li class="action"><a class="editLink" href="#/editPost/:{{_id}}">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#/deletePost/:{{_id}}">delete</a></li>
                        {{/if}}
                    </ul>
                </div>

            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form id="commentForm" action="#/comment/add/:{{_id}}" method="post">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>

    {{#each comments}}
        <article class="post post-content">
            <p>{{content}}</p>
            <div class="info">
                submitted {{daysAgoComment}} ago by {{author}} | {{#if isAuth}}
                <a href="#/comment/del/:{{_id}}" class="deleteLink">delete</a>{{/if}}
            </div>
        </article>
    {{else}}
        <article class="post post-content">
            <p>No comments yet.</p>
        </article>
    {{/each}}
</section>