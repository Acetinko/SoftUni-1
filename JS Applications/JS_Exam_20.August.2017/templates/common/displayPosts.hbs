<div class="post post-content">
    <h1>Your Posts</h1>
</div>
{{#each posts}}
    <div class="posts">
        <article class="post">
            <div class="col rank">
                <span>{{rank}}</span>
            </div>
            <div class="col thumbnail">
                <a href="{{url}}">
                    <img src="{{imageUrl}}">
                </a>
            </div>
            <div class="post-content">
                <div class="title">
                    <a href="{{url}}">
                        {{title}}
                    </a>
                </div>
                <div class="details">
                    <div class="info">
                        submitted {{daysAgo}} ago by {{author}}
                    </div>
                    <div class="controls">
                        <ul>
                            <li class="action"><a class="commentsLink" href="#/comments/:{{_id}}">comments</a></li>
                            <li class="action"><a class="editLink" href="#/editPost/:{{_id}}">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#/deletePost/:{{_id}}">delete</a></li>
                        </ul>
                    </div>

                </div>
            </div>
            <div class="clear"></div>
        </article>
    </div>
{{else}}
    <div class="post"><h3>No posts in database.</h3></div>
{{/each}}