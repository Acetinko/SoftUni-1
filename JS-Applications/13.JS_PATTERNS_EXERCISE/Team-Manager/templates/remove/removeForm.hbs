<form action="#/remove/:{{teamId}}" method="post">
    <div class="form-group">
        <label for="name">New Team Name:</label>
        <input class="form-control" type="text" id="name" name="name" value="{{name}}" disabled/>
    </div>
    <div class="form-group">
        <label for="comment">New Team Comment/Description: </label>
        <input class="form-control" type="text" id="comment" name="comment" value="{{comment}}" disabled/>
    </div>
    <input class="btn btn-danger" type="submit" value="Remove Team"/>
</form>